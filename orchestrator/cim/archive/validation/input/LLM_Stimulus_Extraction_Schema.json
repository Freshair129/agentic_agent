{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "LLM Stimulus Extraction Schema",
    "description": "Schema for validating raw LLM stimulus extraction (multi-chunk) in Phase 1.",
    "type": "object",
    "required": [
        "chunks"
    ],
    "properties": {
        "chunks": {
            "type": "array",
            "minItems": 1,
            "maxItems": 3,
            "items": {
                "type": "object",
                "required": [
                    "valence",
                    "arousal",
                    "intensity",
                    "salience_anchor"
                ],
                "properties": {
                    "valence": {
                        "type": "number",
                        "minimum": -1,
                        "maximum": 1
                    },
                    "arousal": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "intensity": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1
                    },
                    "stress": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1,
                        "default": 0.3
                    },
                    "warmth": {
                        "type": "number",
                        "minimum": 0,
                        "maximum": 1,
                        "default": 0.5
                    },
                    "salience_anchor": {
                        "type": "string",
                        "maxLength": 200
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "default": [
                            "neutral"
                        ]
                    }
                },
                "additionalProperties": false
            }
        }
    },
    "additionalProperties": false
}