{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EVA Matrix State Schema",
    "description": "JSON format for inter-module communication of the 9D psychological state.",
    "type": "object",
    "required": [
        "axes_9d",
        "metadata",
        "timestamp"
    ],
    "properties": {
        "axes_9d": {
            "type": "object",
            "required": [
                "stress",
                "warmth",
                "drive",
                "clarity",
                "joy",
                "alertness",
                "connection",
                "groundedness",
                "openness"
            ],
            "properties": {
                "stress": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "warmth": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "drive": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "clarity": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "joy": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "alertness": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "connection": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "groundedness": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                },
                "openness": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        },
        "metadata": {
            "type": "object",
            "properties": {
                "emotion_label": {
                    "type": "string"
                },
                "intensity": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                }
            }
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "episodic_id": {
            "type": "string"
        },
        "turn_id": {
            "type": "string"
        },
        "context_id": {
            "type": "string"
        }
    }
}