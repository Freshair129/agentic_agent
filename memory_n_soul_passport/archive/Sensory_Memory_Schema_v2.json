{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "EVA-Sensory-Memory-v2",
    "description": "Raw sensory evidence and perceptual feature snapshots for EVA. Sensory memory stores non-interpretive data only. Written by MSP.",
    "type": "object",
    "required": [
        "sensory_id",
        "session_id",
        "episode_ref",
        "timestamp",
        "data_type",
        "data_source",
        "sensory_payload"
    ],
    "properties": {
        "sensory_id": {
            "type": "string",
            "description": "Unique identifier generated by MSP."
        },
        "session_id": {
            "type": "string"
        },
        "episode_ref": {
            "type": "string",
            "description": "Reference to episodic memory (episode_id)."
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "data_type": {
            "type": "string",
            "enum": [
                "text",
                "audio",
                "visual",
                "multimodal"
            ]
        },
        "data_source": {
            "type": "object",
            "required": [
                "source_name",
                "capture_channel"
            ],
            "properties": {
                "source_name": {
                    "type": "string",
                    "description": "Original data source (e.g. microphone, UI, screenshot)."
                },
                "capture_channel": {
                    "type": "string",
                    "enum": [
                        "user_input",
                        "system_ui",
                        "external_sensor"
                    ]
                }
            },
            "additionalProperties": false
        },
        "sensory_payload": {
            "type": "object",
            "description": "Raw or feature-encoded sensory data without interpretation.",
            "properties": {
                "raw_content": {
                    "type": "string",
                    "description": "Raw captured content or reference."
                },
                "feature_snapshot": {
                    "type": "object",
                    "description": "Normalized perceptual features (no meaning assigned).",
                    "properties": {
                        "pitch": {
                            "type": "number"
                        },
                        "volume": {
                            "type": "number"
                        },
                        "tempo": {
                            "type": "number"
                        },
                        "pause_length": {
                            "type": "number"
                        },
                        "tone_descriptor": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "checksum": {
            "type": "string",
            "description": "Optional checksum for integrity validation."
        },
        "msp_metadata": {
            "type": "object",
            "properties": {
                "written_by": {
                    "type": "string",
                    "enum": [
                        "MSP"
                    ]
                },
                "capture_quality": {
                    "type": "string",
                    "enum": [
                        "low",
                        "medium",
                        "high"
                    ]
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}