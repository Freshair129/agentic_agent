{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Episodic LLM Memory Schema",
    "description": "Schema for LLM-side episodic fragments (e.g. from episodes_llm/).",
    "type": "object",
    "required": [
        "episode_id",
        "turn_2"
    ],
    "properties": {
        "episode_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "turn_2": {
            "$ref": "../schema/Episodic_Memory_Schema_v2.json#/definitions/turn_eva"
        },
        "state_snapshot": {
            "$ref": "../schema/Episodic_Memory_Schema_v2.json#/definitions/episode/properties/state_snapshot"
        },
        "crosslinks": {
            "$ref": "../schema/Episodic_Memory_Schema_v2.json#/definitions/episode/properties/crosslinks"
        }
    }
}