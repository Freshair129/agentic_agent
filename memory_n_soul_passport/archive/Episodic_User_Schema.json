{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Episodic User Memory Schema",
    "description": "Schema for User-side episodic fragments (e.g. from episodes_user/).",
    "type": "object",
    "required": [
        "episode_id",
        "timestamp",
        "turn_1"
    ],
    "properties": {
        "episode_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "session_id": {
            "type": "string"
        },
        "episode_tag": {
            "type": "string"
        },
        "event_label": {
            "type": "string"
        },
        "situation_context": {
            "$ref": "../schema/Episodic_Memory_Schema_v2.json#/definitions/episode/properties/situation_context"
        },
        "turn_1": {
            "$ref": "../schema/Episodic_Memory_Schema_v2.json#/definitions/turn_user"
        },
        "state_snapshot": {
            "type": "object",
            "properties": {
                "EVA_matrix": {
                    "$ref": "../schema/Episodic_Memory_Schema_v2.json#/definitions/episode/properties/state_snapshot/properties/EVA_matrix"
                },
                "Resonance_index": {
                    "type": "number"
                }
            }
        }
    }
}