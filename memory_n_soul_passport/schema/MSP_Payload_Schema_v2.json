{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MSP Payload Schema V2",
    "description": "Standard payload layout for MSP state broadcasts and persistence acknowledgments.",
    "type": "object",
    "properties": {
        "module_id": {
            "type": "string",
            "const": "MSP"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "message_type": {
            "type": "string",
            "enum": [
                "persistence_ack",
                "state_broadcast",
                "error_report"
            ]
        },
        "payload": {
            "type": "object",
            "oneOf": [
                {
                    "properties": {
                        "status": {
                            "type": "string",
                            "enum": [
                                "committed",
                                "failed"
                            ]
                        },
                        "memory_id": {
                            "type": "string"
                        },
                        "sector": {
                            "type": "string"
                        }
                    },
                    "required": [
                        "status",
                        "memory_id"
                    ]
                },
                {
                    "properties": {
                        "state_hash": {
                            "type": "string"
                        },
                        "registered_modules": {
                            "type": "integer"
                        }
                    },
                    "required": [
                        "state_hash"
                    ]
                }
            ]
        }
    },
    "required": [
        "module_id",
        "timestamp",
        "message_type",
        "payload"
    ]
}