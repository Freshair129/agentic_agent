{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Episodic Log Entry Schema",
    "description": "Schema for a single line in episodic_log.jsonl",
    "type": "object",
    "properties": {
        "episode_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "session_id": {
            "type": "string"
        },
        "context_id": {
            "type": "string"
        },
        "summary_user": {
            "type": "string"
        },
        "summary_eva": {
            "type": "string"
        },
        "tags": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "emotion_label": {
            "type": "string"
        },
        "resonance_index": {
            "type": "number"
        },
        "ri_level": {
            "type": "string"
        },
        "salience_anchor": {
            "type": "string"
        },
        "episode_tag": {
            "type": "string"
        },
        "intent": {
            "type": "string"
        },
        "confidence_score": {
            "type": "number"
        },
        "event_label": {
            "type": "string"
        }
    },
    "required": [
        "episode_id",
        "timestamp",
        "summary_user",
        "summary_eva"
    ]
}