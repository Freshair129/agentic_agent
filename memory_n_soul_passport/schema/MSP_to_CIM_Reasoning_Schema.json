{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "MSP_to_CIN_Reasoning_Schema",
    "description": "Phase 2: Deep context integration using existing database fields and RAG results. Strict Least Privilege.",
    "type": "object",
    "required": [
        "reasoning_context",
        "psychological_context",
        "rag_context"
    ],
    "properties": {
        "reasoning_context": {
            "type": "object",
            "required": [
                "last_turn_summary"
            ],
            "properties": {
                "last_turn_summary": {
                    "type": "string"
                },
                "interpersonal_atmosphere": {
                    "type": "string"
                },
                "previous_intent": {
                    "type": "string"
                },
                "previous_context_id": {
                    "type": "string"
                }
            },
            "additionalProperties": false
        },
        "psychological_context": {
            "type": "object",
            "required": [
                "eva_matrix_state",
                "resonance_metrics"
            ],
            "properties": {
                "eva_matrix_state": {
                    "type": "object",
                    "required": [
                        "axes_9d"
                    ],
                    "properties": {
                        "axes_9d": {
                            "type": "object",
                            "properties": {
                                "stress_load": {
                                    "type": "number"
                                },
                                "social_warmth": {
                                    "type": "number"
                                },
                                "drive_level": {
                                    "type": "number"
                                },
                                "cognitive_clarity": {
                                    "type": "number"
                                },
                                "joy_level": {
                                    "type": "number"
                                },
                                "emotion_label": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false
                        },
                        "metadata": {
                            "type": "object",
                            "additionalProperties": false
                        }
                    },
                    "additionalProperties": false
                },
                "resonance_metrics": {
                    "type": "object",
                    "properties": {
                        "Resonance_index": {
                            "type": "number"
                        },
                        "memory_encoding_level": {
                            "type": "string"
                        },
                        "memory_color": {
                            "type": "string"
                        }
                    },
                    "additionalProperties": false
                }
            },
            "additionalProperties": false
        },
        "rag_context": {
            "type": "object",
            "required": [
                "hept_stream_matches"
            ],
            "properties": {
                "hept_stream_matches": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "required": [
                            "stream",
                            "content"
                        ],
                        "properties": {
                            "stream": {
                                "type": "string",
                                "enum": [
                                    "narrative",
                                    "salience",
                                    "sensory",
                                    "intuition",
                                    "emotion",
                                    "temporal",
                                    "reflection"
                                ]
                            },
                            "content": {
                                "type": "string"
                            },
                            "score": {
                                "type": "number"
                            }
                        },
                        "additionalProperties": false
                    }
                }
            },
            "additionalProperties": false
        }
    },
    "additionalProperties": false
}