{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "User_Profile_Schema",
    "version": "2.0.1",
    "description": "Schema for user modeling and persistent identity (Layer 07).",
    "type": "object",
    "properties": {
        "user_id": {
            "type": "string"
        },
        "profile": {
            "type": "object",
            "properties": {
                "name": {
                    "type": "string"
                },
                "role": {
                    "type": "string"
                },
                "level": {
                    "type": "string",
                    "description": "User priority level (e.g., Founder / Dev, Friend, User)"
                },
                "priority": {
                    "type": "integer",
                    "description": "Numeric priority (1=highest, 10=lowest)",
                    "minimum": 1,
                    "maximum": 10
                },
                "preferences": {
                    "type": "object"
                }
            }
        },
        "interaction_model": {
            "type": "object",
            "properties": {
                "trust_level": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0
                },
                "familiarity": {
                    "type": "number",
                    "minimum": 0.0,
                    "maximum": 1.0
                },
                "key_topics": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            }
        },
        "user_block": {
            "type": "object",
            "description": "Grounding facts - persistent verified truths about the user",
            "properties": {
                "grounding_facts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "fact_id": {
                                "type": "string",
                                "description": "Unique fact ID (e.g., UF_001)"
                            },
                            "category": {
                                "type": "string",
                                "enum": [
                                    "health",
                                    "allergy",
                                    "preference",
                                    "memory",
                                    "skill",
                                    "belief",
                                    "relationship"
                                ]
                            },
                            "statement": {
                                "type": "string",
                                "description": "The verified fact"
                            },
                            "confidence": {
                                "type": "number",
                                "minimum": 0.0,
                                "maximum": 1.0
                            },
                            "evidence_episodes": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                },
                                "description": "Episode IDs supporting this fact"
                            },
                            "last_verified": {
                                "type": "string",
                                "format": "date-time"
                            },
                            "contradictions": {
                                "type": "array",
                                "items": {
                                    "type": "object",
                                    "properties": {
                                        "episode_id": {
                                            "type": "string"
                                        },
                                        "conflicting_statement": {
                                            "type": "string"
                                        },
                                        "resolution": {
                                            "type": "string"
                                        },
                                        "timestamp": {
                                            "type": "string",
                                            "format": "date-time"
                                        }
                                    }
                                }
                            }
                        },
                        "required": [
                            "fact_id",
                            "category",
                            "statement",
                            "confidence"
                        ]
                    }
                }
            }
        },
        "last_interaction": {
            "type": "string",
            "format": "date-time"
        }
    },
    "required": [
        "user_id",
        "profile"
    ]
}