{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Episodic AI Memory Schema",
    "description": "Schema for AI-side episodic fragments (e.g. from episodes_ai/).",
    "type": "object",
    "required": [
        "episode_id",
        "timestamp",
        "llm_fragment_proposal",
        "state_snapshot"
    ],
    "properties": {
        "episode_id": {
            "type": "string"
        },
        "timestamp": {
            "type": "string",
            "format": "date-time"
        },
        "llm_fragment_proposal": {
            "$ref": "Episodic_Memory_Schema_v2.json#/definitions/turn_llm"
        },
        "state_snapshot": {
            "$ref": "State_Snapshot_Schema.json#"
        },
        "crosslinks": {
            "$ref": "Episodic_Memory_Schema_v2.json#/definitions/episode/properties/crosslinks"
        }
    }
}