{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Core_Memory_Schema",
    "version": "2.0.1",
    "description": "Schema for landmark identity and extracted principles (Layer 05).",
    "type": "object",
    "properties": {
        "core_id": {
            "type": "string"
        },
        "extraction_date": {
            "type": "string",
            "format": "date-time"
        },
        "source_sessions": {
            "type": "array",
            "items": {
                "type": "string"
            }
        },
        "landmarks": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "type": {
                        "type": "string",
                        "enum": [
                            "belief",
                            "habit",
                            "relationship",
                            "knowledge"
                        ]
                    },
                    "content": {
                        "type": "string"
                    },
                    "confidence": {
                        "type": "number"
                    }
                }
            }
        },
        "evolution_metrics": {
            "type": "object",
            "properties": {
                "identity_drift": {
                    "type": "number"
                },
                "growth_index": {
                    "type": "number"
                }
            }
        }
    },
    "required": [
        "core_id",
        "landmarks"
    ]
}